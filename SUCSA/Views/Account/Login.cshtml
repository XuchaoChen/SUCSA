@using SUCSA.Models
@model LoginViewModel
@{
    ViewBag.Title = "Login";
}
<div class="container">
    <div class="row" style="margin-top:20px">
        <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
            @using (@Html.BeginForm("Login", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
               
                <fieldset>
                    <h2>SUCSA管理员登陆</h2>
                    <hr class="colorgraph">
                    <div class="form-group" >
                        @Html.TextBoxFor(m=>m.Username,new { @class= "form-control input-lg",placeholder="Username" })
                        @Html.ValidationMessageFor(m => m.Username, null, new { @style = "color:red;" })
                    </div>
                    <div class="form-group">
                        @Html.PasswordFor(m=>m.Password,new { @class = "form-control input-lg", placeholder = "Password" })
                        @Html.ValidationMessageFor(m => m.Password, null, new { @style = "color:red;" })
                    </div>
                    @Html.ValidationSummary(true, null, new { @style = "color:red;" })
                    <span class="button-checkbox">
                        <button type="button" class="btn" data-color="info">Remember Me</button>
                        @Html.CheckBoxFor(m=> m.RememberMe,new { @class = "hidden" })
                    </span>
                    <hr class="colorgraph">
                    <div class="row">
                        <div class="col-xs-6 col-sm-6 col-md-6">
                            <input type="submit" class="btn btn-lg btn-success btn-block" value="Sign In">
                        </div>
                    </div>
                </fieldset>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
